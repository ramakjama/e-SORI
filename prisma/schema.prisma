// Soriano e-Cliente - Premium Insurtech Platform
// Schema de base de datos

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ========================================
// USUARIOS Y AUTENTICACION
// ========================================

enum UserRole {
  CLIENTE
  EMPLEADO
  ADMIN
}

enum UserLevel {
  BRONCE
  PLATA
  ORO
  PLATINO
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  emailVerified  DateTime?
  password       String?
  name           String?
  phone          String?
  avatar         String?
  dni            String?
  address        String?
  city           String?
  postalCode     String?
  birthDate      DateTime?
  role           UserRole  @default(CLIENTE)
  level          UserLevel @default(BRONCE)
  points         Int       @default(0)
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  policies       Policy[]
  claims         Claim[]
  documents      Document[]
  messages       Message[]         @relation("UserMessages")
  receivedMessages Message[]       @relation("ReceivedMessages")
  badges         UserBadge[]
  pointsHistory  PointsHistory[]
  referralsMade  Referral[]        @relation("Referrer")
  referredBy     Referral?         @relation("Referred")
  conversations  Conversation[]
  notifications  Notification[]

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================================
// POLIZAS
// ========================================

enum PolicyType {
  AUTO
  HOGAR
  VIDA
  SALUD
  DECESOS
}

enum PolicyStatus {
  ACTIVA
  PENDIENTE
  VENCIDA
  CANCELADA
}

model Policy {
  id              String       @id @default(cuid())
  policyNumber    String       @unique
  type            PolicyType
  status          PolicyStatus @default(ACTIVA)
  userId          String
  name            String
  description     String?
  premium         Float
  paymentFrequency String      @default("anual")
  startDate       DateTime
  endDate         DateTime
  nextPayment     DateTime?
  coverages       String[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  user            User         @relation(fields: [userId], references: [id])
  claims          Claim[]
  documents       Document[]
  payments        Payment[]

  @@index([userId])
  @@index([type])
}

// ========================================
// SINIESTROS
// ========================================

enum ClaimStatus {
  COMUNICADO
  DOCUMENTACION
  EN_REVISION
  APROBADO
  EN_PROCESO
  RESUELTO
  RECHAZADO
}

model Claim {
  id              String       @id @default(cuid())
  claimNumber     String       @unique
  policyId        String
  userId          String
  type            String
  description     String
  status          ClaimStatus  @default(COMUNICADO)
  amount          Float?
  incidentDate    DateTime
  resolvedDate    DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  policy          Policy       @relation(fields: [policyId], references: [id])
  user            User         @relation(fields: [userId], references: [id])
  timeline        ClaimTimeline[]
  documents       Document[]

  @@index([userId])
  @@index([policyId])
  @@index([status])
}

model ClaimTimeline {
  id          String      @id @default(cuid())
  claimId     String
  status      ClaimStatus
  title       String
  description String?
  createdAt   DateTime    @default(now())

  claim       Claim       @relation(fields: [claimId], references: [id], onDelete: Cascade)

  @@index([claimId])
}

// ========================================
// DOCUMENTOS
// ========================================

enum DocumentType {
  POLIZA
  RECIBO
  SINIESTRO
  OTROS
}

model Document {
  id          String       @id @default(cuid())
  userId      String
  policyId    String?
  claimId     String?
  type        DocumentType
  name        String
  fileUrl     String
  fileSize    String
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id])
  policy      Policy?      @relation(fields: [policyId], references: [id])
  claim       Claim?       @relation(fields: [claimId], references: [id])

  @@index([userId])
}

// ========================================
// PAGOS
// ========================================

enum PaymentStatus {
  PENDIENTE
  PAGADO
  VENCIDO
}

model Payment {
  id          String        @id @default(cuid())
  policyId    String
  amount      Float
  status      PaymentStatus @default(PENDIENTE)
  dueDate     DateTime
  paidDate    DateTime?
  createdAt   DateTime      @default(now())

  policy      Policy        @relation(fields: [policyId], references: [id])

  @@index([policyId])
}

// ========================================
// MENSAJERIA
// ========================================

model Message {
  id          String   @id @default(cuid())
  senderId    String
  receiverId  String
  subject     String
  content     String
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  sender      User     @relation("UserMessages", fields: [senderId], references: [id])
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id])

  @@index([senderId])
  @@index([receiverId])
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  title       String
  message     String
  type        String
  isRead      Boolean  @default(false)
  link        String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ========================================
// GAMIFICACION - SORIANO CLUB
// ========================================

enum PointsAction {
  PERFIL_COMPLETO
  NUEVA_POLIZA
  RENOVACION
  REFERIDO_REGISTRO
  REFERIDO_CONVERSION
  CHAT_SORI
  REVIEW
  LOGIN_DIARIO
}

model PointsHistory {
  id          String       @id @default(cuid())
  userId      String
  action      PointsAction
  points      Int
  description String?
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Badge {
  id          String      @id @default(cuid())
  code        String      @unique
  name        String
  description String
  icon        String
  color       String
  isSecret    Boolean     @default(false)
  createdAt   DateTime    @default(now())

  users       UserBadge[]
}

model UserBadge {
  id          String   @id @default(cuid())
  userId      String
  badgeId     String
  earnedAt    DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge       Badge    @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId])
  @@index([userId])
}

enum ReferralStatus {
  PENDIENTE
  REGISTRADO
  CONVERTIDO
}

model Referral {
  id            String         @id @default(cuid())
  referrerId    String
  referredId    String?        @unique
  referredEmail String
  code          String         @unique
  status        ReferralStatus @default(PENDIENTE)
  createdAt     DateTime       @default(now())
  convertedAt   DateTime?

  referrer      User           @relation("Referrer", fields: [referrerId], references: [id])
  referred      User?          @relation("Referred", fields: [referredId], references: [id])

  @@index([referrerId])
  @@index([code])
}

// ========================================
// CHAT SORI (IA)
// ========================================

model Conversation {
  id          String        @id @default(cuid())
  userId      String
  title       String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]

  @@index([userId])
}

enum ChatMessageRole {
  USER
  ASSISTANT
  SYSTEM
}

model ChatMessage {
  id             String          @id @default(cuid())
  conversationId String
  role           ChatMessageRole
  content        String
  createdAt      DateTime        @default(now())

  conversation   Conversation    @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

// ========================================
// LEADS - CAPTACIÓN LANDING PAGES
// ========================================

enum LeadStatus {
  NUEVO
  CONTACTADO
  CUALIFICADO
  OPORTUNIDAD
  GANADO
  PERDIDO
}

enum InsuranceType {
  AUTO
  HOGAR
  SALUD
  VIDA
  DECESOS
  MASCOTAS
  COMERCIO
  COMUNIDADES
  VIAJE
  MOTO
  ACCIDENTES
  RC_PROFESIONAL
  GENERAL
}

model Lead {
  id            String        @id @default(cuid())
  name          String
  email         String
  phone         String
  message       String?
  status        LeadStatus    @default(NUEVO)
  insuranceType InsuranceType @default(GENERAL)

  // Tracking de fuente
  source        String        // landing-seguro-auto, promo-black-friday, etc.
  campaign      String?       // black-friday-2024, navidad-2024, etc.
  landingPage   String        // URL completa de donde vino

  // UTM Parameters
  utmSource     String?       // google, facebook, instagram, email
  utmMedium     String?       // cpc, social, email, organic
  utmCampaign   String?       // nombre de campaña
  utmContent    String?       // variante de anuncio
  utmTerm       String?       // keyword de búsqueda

  // Referidos
  referralCode  String?       // código de referido si aplica

  // Metadata técnica
  userAgent     String?
  ipAddress     String?

  // Gestión
  notes         String?
  assignedTo    String?       // userId del agente asignado

  // Gamificación
  pointsAwarded Int           @default(0)

  // Conversión
  convertedAt   DateTime?
  convertedToUserId String?   // Si se convierte en cliente

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([status])
  @@index([insuranceType])
  @@index([source])
  @@index([campaign])
  @@index([createdAt])
  @@index([email])
}
