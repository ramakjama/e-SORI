# ==========================================
# CONFIGURACIÓN e-SORI - Soriano Mediadores
# ==========================================

# ==========================================
# BASE URL
# ==========================================
NEXT_PUBLIC_APP_URL=https://app.sorianomediadores.es
NEXTAUTH_URL=https://app.sorianomediadores.es

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/esori_db?schema=public"

# ==========================================
# NEXTAUTH
# ==========================================
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# ==========================================
# OAUTH PROVIDERS
# ==========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure AD
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# Apple OAuth (opcional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# ==========================================
# EMAIL (Para verificación y notificaciones)
# ==========================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@sorianomediadores.es

# ==========================================
# RESEND (Email Automation)
# ==========================================
# Obtén tu API key en: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Email from para los emails automatizados
RESEND_EMAIL_FROM=renovaciones@sorianomediadores.es

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV=production

# ==========================================
# CRON JOBS
# ==========================================
# Secret para proteger los endpoints de cron
# Generar con: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# ==========================================
# FEATURES FLAGS (opcional)
# ==========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
